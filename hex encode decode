const encodeHex = str => Array.from(str).map(c => c.charCodeAt(0).toString(16)).join('');
const decodeHex = hex => hex.match(/.{1,2}/g).map(b => String.fromCharCode(parseInt(b,16))).join('');

const text = "Hello Hex";
const h = encodeHex(text);
console.log("Hex:", h);
console.log("Decoded:", decodeHex(h));
